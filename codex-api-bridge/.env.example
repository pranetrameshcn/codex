# Codex API Bridge Configuration
# Copy this file to .env and fill in the values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=sk-your-api-key-here

# Path to Codex binary (optional - auto-detects if in PATH)
CODEX_BINARY_PATH=

# Working directory for Codex sessions (defaults to current directory)
CODEX_WORKING_DIR=

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO
