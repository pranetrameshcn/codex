# Codex API Bridge Configuration
# Copy this file to .env and fill in the values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=sk-your-api-key-here

# Path to Codex binary (optional - auto-detects if in PATH)
CODEX_BINARY_PATH=

# Working directory for Codex sessions (defaults to current directory)
CODEX_WORKING_DIR=

# Security (set to "Keycloak" to enable authentication, or "None" to disable)
SECURITY_METHOD=None

# Allow user_id override via query param / X-User-Id header (testing only)
ALLOW_USER_ID_OVERRIDE=false

# Keycloak settings (required when SECURITY_METHOD=Keycloak)
KEYCLOAK_BASE_URL=
KEYCLOAK_REALM=
KEYCLOAK_CLIENT_ID=
KEYCLOAK_CLIENT_SECRET=
# Optional: override the auto-generated introspection URL
# KEYCLOAK_INTROSPECTION_URL=
# KEYCLOAK_TIMEOUT_SECONDS=5

# User MongoDB settings (required when SECURITY_METHOD=Keycloak)
USER_MONGODB_URL=
USER_MONGODB_DATABASE=users
USER_MONGODB_COLLECTION=users

# Multi-user settings
BASE_DATA_DIR=./data
MAX_SESSIONS=50
IDLE_TIMEOUT_SECONDS=300
CLEANUP_INTERVAL_SECONDS=60

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO
